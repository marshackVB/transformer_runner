{
    "settings": {
        "new_cluster": {
            "spark_version": "9.0.x-gpu-ml-scala2.12",
            "spark_conf": {
                "spark.databricks.cluster.profile": "singleNode",
                "spark.master": "local[*, 4]",
                "spark.databricks.delta.preview.enabled": "true"
            },
            "azure_attributes": {
                "availability": "ON_DEMAND_AZURE",
                "first_on_demand": 1,
                "spot_bid_max_price": -1
            },
            "node_type_id": "Standard_NC12",
            "driver_node_type_id": "Standard_NC12",
            "custom_tags": {
                "ResourceClass": "SingleNode"
            },
            "enable_elastic_disk": true
        },
        "notebook_task": {
            "notebook_path": "/Repos/transformers/model_runner"
        },
        "email_notifications": {},
        "name": "transformer_runner",
        "max_concurrent_runs": 100
    }
}